<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="@dimen/_155sdp"
        android:layout_height="@dimen/_160sdp"
        android:id="@+id/main_layout"
        android:visibility="gone"
        android:padding="@dimen/_10sdp"
        android:layout_margin="@dimen/_5sdp"
        android:background="@mipmap/images_border"
        android:layout_centerInParent="true">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="@dimen/_5sdp">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cropToPadding="false"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:id="@+id/video_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@mipmap/play_video"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="horizontal">

           </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:alpha="0.5"
        android:layout_margin="@dimen/_5sdp"
        android:visibility="gone"
        android:layout_gravity="right"
        android:orientation="vertical"
        android:id="@+id/selectedlayout"
        android:background="@mipmap/uncheck"></LinearLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/selectedImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="@dimen/_5sdp"
        android:layout_gravity="right"
        android:visibility="gone"
        app:srcCompat="@mipmap/check"></androidx.appcompat.widget.AppCompatImageView>
        <RelativeLayout
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_50sdp"
            android:orientation="horizontal"
            android:visibility="gone"
            android:id="@+id/share_n_delete_layout"
            android:layout_alignParentBottom="true">
            <RelativeLayout
                android:layout_width="@dimen/_150sdp"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:alpha="0.5"></RelativeLayout>
            <LinearLayout
                android:layout_width="@dimen/_150sdp"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/delete"
                    android:layout_weight="0.9"
                    android:gravity="center"
                    android:id="@+id/delete_image"
                    android:textColor="@color/white"></TextView>
               <View
                   android:layout_width="0dp"
                   android:layout_weight="0.02"
                   android:layout_height="@dimen/_20sdp"
                   android:background="@color/white">

               </View>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.9"
                    android:gravity="center"
                    android:id="@+id/share_image"
                    android:text="@string/menu_share"
                    android:textColor="@color/white"></TextView>
            </LinearLayout>
        </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_100sdp"
        android:layout_centerInParent="true"
        android:visibility="visible"
        android:id="@+id/progress"></ProgressBar>

    <FrameLayout
        android:id="@+id/frame_layout_adapter"
        android:layout_width="@dimen/_155sdp"
        android:background="@mipmap/images_border"
        android:layout_height="@dimen/_160sdp"
        android:layout_centerInParent="true"
        android:padding="@dimen/_10sdp"
        android:visibility="gone"></FrameLayout>

</RelativeLayout>
