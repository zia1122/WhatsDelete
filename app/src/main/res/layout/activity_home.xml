        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_60sdp">
            <ScrollView
                android:layout_above="@+id/adz_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/ll1"
                        android:gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:id="@+id/deleteChat"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_marginEnd="10dp"
                            android:padding="@dimen/_10sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:background="@drawable/dashboard_bg">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="@string/whatsdelete"
                                android:gravity="center"
                                android:textSize="@dimen/_12sdp"
                                android:textColor="@color/buttonStockColor"
                                android:drawablePadding="@dimen/_10sdp"
                                android:paddingTop="@dimen/_10sdp"
                                android:drawableTop="@drawable/ic_deleted_whatsapp_messages"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/whatsdelete"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_marginStart="10dp"
                            android:gravity="center"
                            android:padding="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:background="@drawable/dashboard_bg">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Deleted Chat\n Media"
                                android:gravity="center"
                                android:textSize="@dimen/_12sdp"
                                android:textColor="@color/buttonStockColor"
                                android:drawablePadding="@dimen/_10sdp"
                                android:paddingTop="@dimen/_10sdp"
                                android:fontFamily="@font/seguisb"
                                android:drawableTop="@drawable/ic_deleted_chat_media"/>
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ll1"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="horizontal">
                      <!--  <LinearLayout
                            android:id="@+id/messaging"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:background="@drawable/main_btn_slctr">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="@string/direct_messaging"
                                android:gravity="center"
                                android:textSize="@dimen/_12sdp"
                                android:textColor="@color/black"
                                android:drawablePadding="@dimen/_10sdp"
                                android:paddingTop="@dimen/_10sdp"
                                android:drawableTop="@mipmap/home_directchat"/>
                        </LinearLayout>-->
                        <LinearLayout
                            android:id="@+id/newStatus"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_marginEnd="10dp"
                            android:padding="@dimen/_10sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:background="@drawable/dashboard_bg">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="New Whatsapp\n Statuses"
                                android:gravity="center"
                                android:textSize="@dimen/_12sdp"
                                android:textColor="@color/buttonStockColor"
                                android:drawablePadding="@dimen/_10sdp"
                                android:paddingTop="@dimen/_10sdp"
                                android:drawableTop="@drawable/ic_new_whatsapp_statuses"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/statusSaver"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_marginEnd="10dp"
                            android:padding="@dimen/_10sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:background="@drawable/dashboard_bg">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Downloaded\n Statuses"
                                android:gravity="center"
                                android:textSize="@dimen/_12sdp"
                                android:textColor="@color/buttonStockColor"
                                android:drawablePadding="@dimen/_10sdp"
                                android:paddingTop="@dimen/_10sdp"
                                android:drawableTop="@drawable/ic_downloaded_statuses"/>
                        </LinearLayout>
